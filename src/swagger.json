{
    "openapi": "3.0.0",
    "info": {
        "title": "User registry API",
        "description": "This API is used to store user data",
        "termsOfService": "http://localhost:3000/terms",
        "contact": {
            "email": "carlos.lemos@dataside"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "test url"
            
        },
        {
            "url": "http://www.dataside.com.br/api/users",
            "description": "production url"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "summary": "User creation",
                "description": "This route is used for user registration",
                "tags": ["Users"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Users"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "john.marine@dataside",
                                        "name": "John Marine",
                                        "age": 27
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Get all users",
                "description": "This route is used to query all users",
                "tags": ["Users"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{userId}": {
            "get": {
                "summary": "Get one user",
                "description": "This route is used to query one user",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "User ID",
                        "required": true
                    }
                ],
                
                "responses": {
                    "200": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update one user",
                "description": "This route is used to update a user",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "Alter a user by id",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Users"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "john.marine@dataside",
                                        "name": "John Marine",
                                        "age": 27
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "User deletion",
                "description": "This route is used to delete a user",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "User ID",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Users"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Users": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "age": {
                        "type": "number"
                    }
                }
            }
        }
    }

}